<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @rho_monitor.object %>
    <h1>Edit <%= @rho_monitor.url%></h1>
    <%= link_to "Delete", :action => :delete, :id => @rho_monitor.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @rho_monitor.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Url: </td>
              <td class="itemValue"><input type="text" name="rho_monitor[url]" value="<%= @rho_monitor.url %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
