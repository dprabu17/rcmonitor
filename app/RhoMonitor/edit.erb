<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @rho_monitor.url %></h1>
    <a href="<%= url_for :action => :show, :id => @rho_monitor.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @rho_monitor.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @rho_monitor.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="rho_monitor[url]" class="fieldLabel">Url</label>
            <input type="text" id="rho_monitor[url]" name="rho_monitor[url]" value="<%= @rho_monitor.url %>" <%= placeholder( "Url" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
