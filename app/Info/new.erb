<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @info.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @info.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="info[available]" class="fieldLabel">Available</label>
            <input type="text" id="info[available]" name="info[available]" <%= placeholder("Available") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="info[total]" class="fieldLabel">Total</label>
            <input type="text" id="info[total]" name="info[total]" <%= placeholder("Total") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="info[date]" class="fieldLabel">Date</label>
            <input type="text" id="info[date]" name="info[date]" <%= placeholder("Date") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
