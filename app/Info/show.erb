<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @info.available %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @info.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Available</div>
            <div class="itemValue"><%= @info.available %></div>
          </li>
      
          <li>
            <div class="itemLabel">Total</div>
            <div class="itemValue"><%= @info.total %></div>
          </li>
      
          <li>
            <div class="itemLabel">Date</div>
            <div class="itemValue"><%= @info.date %></div>
          </li>
      
    </ul>
  </div>

</div>
