<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @info.available %></h1>
    <a href="<%= url_for :action => :show, :id => @info.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @info.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @info.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="info[available]" class="fieldLabel">Available</label>
            <input type="text" id="info[available]" name="info[available]" value="<%= @info.available %>" <%= placeholder( "Available" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="info[total]" class="fieldLabel">Total</label>
            <input type="text" id="info[total]" name="info[total]" value="<%= @info.total %>" <%= placeholder( "Total" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="info[date]" class="fieldLabel">Date</label>
            <input type="text" id="info[date]" name="info[date]" value="<%= @info.date %>" <%= placeholder( "Date" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
