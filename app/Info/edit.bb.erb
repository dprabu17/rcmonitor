<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @info.object %>
    <h1>Edit <%= @info.available%></h1>
    <%= link_to "Delete", :action => :delete, :id => @info.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @info.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Available: </td>
              <td class="itemValue"><input type="text" name="info[available]" value="<%= @info.available %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Total: </td>
              <td class="itemValue"><input type="text" name="info[total]" value="<%= @info.total %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Date: </td>
              <td class="itemValue"><input type="text" name="info[date]" value="<%= @info.date %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
