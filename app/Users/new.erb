<div data-role="page" data-theme="a">

  <div data-role="header" data-position="inline">
    <h1>New User </h1>
    <a href="<%= Rho::RhoConfig.dashboard_path %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Back
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
          <div data-role="fieldcontain">
            <label for="users[name]" class="fieldLabel">Login</label>
            <input type="text" id="users[name]" name="users[name]" />
          </div>
          <div data-role="fieldcontain">
              <label for="users[password]" class="fieldLabel">Password</label>
              <input type="password" id="users[password]" name="users[password]" />
          </div>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
